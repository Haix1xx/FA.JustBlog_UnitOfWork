@using FA.JustBlog.Core.Models;
@model IEnumerable<Post>
<div class="w-100">
    <h1>Most viewed posts</h1>
    <hr />
    <!-- Post preview-->
    @foreach (var post in Model)
    {
        @await Component.InvokeAsync("PostCard", post)
        <!-- Divider-->
        <hr class="my-4" />
    }
    <!-- Pager-->
</div>