@using FA.JustBlog.Core.Models;
@model IEnumerable<Post>
<div class="w-100">
    <h4 class="pt-4 post-heading" style="color: var(--bs-teal)">Most viewed posts</h4>
    <hr />
    <!-- Post preview-->
    @foreach (var post in Model)
    {
        @await Component.InvokeAsync("PostCard", post)
        <!-- Divider-->
        <hr class="my-4" />
    }
    <!-- Pager-->
</div>